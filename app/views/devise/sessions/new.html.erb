<div class="background-user">
  <div class="row">
    <div class="small-10 medium-6 large-4 small-centered columns">
      <div class="sign-in-form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h4 class="text-center">sign in</h4>
          <div class="field">
            <%= f.label :email, for: 'sign-in-form-username' %><br />
            <%= f.email_field :email, autofocus: true, class: 'sign-in-form-username' %>
          </div>

          <div class="field">
            <%= f.label :password, for: 'sign-in-form-password' %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'sign-in-form-password' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: 'sign-in-form-button' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
