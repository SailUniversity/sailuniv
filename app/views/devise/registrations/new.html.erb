<div class="background-user-reg">
<div class="row">
  <div class="small-10 small-centered columns">
<div class="registration-form">
  <h2>Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="small-10 medium-12 small-centered columns">
      <div class="field">
        <%= f.label :email, for: 'registration-form-username' %>
        <%= f.email_field :email, autofocus: true, placeholder: 'email@example.com', class: 'registration-form-username' %>
      </div>
    </div>

    <div class="row">
      <div class="small-10 medium-6 columns">
        <div class="field">
          <%= f.label :firstname, for: 'registration-form-info' %>
          <%= f.text_field :firstname, autofocus: true, placeholder: 'Jane', class: 'registration-form-info' %>
        </div>
      </div>

      <div class="small-10 medium-6 columns">
        <div class="field">
          <%= f.label :lastname, for: 'registration-form-info' %>
          <%= f.text_field :lastname, autofocus: true, placeholder: 'Smith', class: 'registration-form-info' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="small-10 medium-6 columns">
        <div class="field">
          <%= f.label :password, for: 'registration-form-info' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'registration-form-info' %>
        </div>
      </div>

      <div class="small-10 medium-6 columns">
        <div class="field">
          <%= f.label :password_confirmation, for: 'registration-form-info' %>
          <% if @minimum_password_length %>
          <em>(Password must match)</em>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'password', class: 'registration-form-info' %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'registration-form-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
