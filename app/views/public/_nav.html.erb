<% if user_signed_in? %>
  <div data-sticky-container>
    <nav class="top-bar topbar-responsive" data-sticky data-options="marginTop:0;" style="width:100%">
      <div class="top-bar-title">
        <span data-responsive-toggle="topbar-responsive" data-hide-for="medium">
          <button class="menu-icon" type="button" data-toggle></button>
        </span>
        <strong><%= link_to "Sail University", root_path, class:'topbar-responsive-logo' %></strong>
      </div>
      <div id="topbar-responsive" class="topbar-responsive-links">
        <div class="top-bar-right">
          <ul class="dropdown menu" data-dropdown-menu>
            <li>Welcome back <%= current_user.firstname %>!</li>
            <li><%= link_to('Your Account', edit_user_registration_path) %>
              <ul class="menu vertical">
                <li><%= link_to 'Dashboard', root_path %></li>
                <li><%= link_to 'Settings', root_path %></li>
                <li><%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
<% else %>
  <div data-sticky-container>
    <nav class="top-bar topbar-responsive" data-sticky data-options="marginTop:0;" style="width:100%">
      <div class="top-bar-title">
        <span data-responsive-toggle="topbar-responsive" data-hide-for="medium">
        <button class="menu-icon" type="button" data-toggle></button>
        </span>
        <strong><%= link_to "Sail University", root_path, class:'topbar-responsive-logo' %></strong>
      </div>
      <div id="topbar-responsive" class="topbar-responsive-links">
        <div class="top-bar-right">
          <ul class="menu">
            <li><%= link_to "About", root_path %></li>
            <li><%= link_to "Courses", root_path %></li>
            <li><%= link_to "Free Classes", root_path %></li>
            <li><%= link_to('Sign In', new_user_session_path)  %></li>
            <li><%= button_to('Sign Up', new_user_registration_path, type:'button', class:'button hollow topbar-responsive-button', method: 'get')  %></li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
<% end %>
