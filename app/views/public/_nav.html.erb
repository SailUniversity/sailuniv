<% if user_signed_in? %>
<div class="multilevel-offcanvas off-canvas position-left reveal-for-large" id="offCanvasRight" data-off-canvas>

  <ul class="vertical menu" data-accordion-menu>
    <li><%= link_to 'Home', dashboard_landing_path %></li>
    <li><%= current_user.email %></li>
    <li><a href="#">Your Courses</a>
      <ul class="menu vertical nested">
        <li><a href="#">Learn to Sail</a></li>
        <li><a href="#">Mastering the Wind</a></li>
        <li><a href="#">Rules of the Road - Free</a></li>
       </ul>
     </li>
   </ul>
  <ul class="vertical menu">
    <li><%= link_to 'All Courses', root_path %></li>
    <li><%= link_to ("<i class='fa fa-envelope-o'></i> Messages").html_safe, root_path %></li>
    <li><%= link_to ("<i class='fa fa-life-ring'></i> Support").html_safe, root_path %></li>
    <li><%= link_to ("<i class='fa fa-cog'></i> Settings").html_safe, edit_user_registration_path %></li>
    <li><%= link_to ("<i class='fa fa-sign-out'></i> Sign Out").html_safe, destroy_user_session_path, :method => :delete %></li>
  </ul>
</div>
<% else %>
  <div data-sticky-container>
    <nav class="top-bar topbar-responsive" data-sticky data-options="marginTop:0;" style="width:100%">
      <div class="top-bar-title">
        <span data-responsive-toggle="topbar-responsive" data-hide-for="medium">
        <button class="menu-icon" type="button" data-toggle></button>
        </span>
        <strong><%= link_to "Sail University", root_path, class:'topbar-responsive-logo' %></strong>
      </div>
      <div id="topbar-responsive" class="topbar-responsive-links">
        <div class="top-bar-right">
          <ul class="menu">
            <li><%= link_to "About", root_path %></li>
            <li><%= link_to "Courses", root_path %></li>
            <li><%= link_to "Free Classes", root_path %></li>
            <li><%= link_to('Sign In', new_user_session_path)  %></li>
            <li><%= button_to('Sign Up', new_user_registration_path, type:'button', class:'button hollow topbar-responsive-button', method: 'get')  %></li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
<% end %>
